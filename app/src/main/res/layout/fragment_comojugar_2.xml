<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_liso"
    android:orientation="horizontal"
    tools:context=".ComoJugar_1">

    <HorizontalScrollView
        android:id="@+id/scrollview_comojugar2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_comojugar23"
                android:layout_width="650dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/imagen_comojugar23"
                app:srcCompat="@drawable/comojugar2a" />

            <ImageView
                android:id="@+id/imagen_comojugar22"
                android:layout_width="650dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/imagen_comojugar22"
                app:srcCompat="@drawable/comojugar2b" />

            <ImageView
                android:id="@+id/imagen_comojugar21"
                android:layout_width="650dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/imagen_comojugar21"
                app:srcCompat="@drawable/comojugar2c" />

            <ImageButton
                android:id="@+id/boton_comosejuega2"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:contentDescription="@string/boton_comosejuega2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/flechasiguiente" />
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>