<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_liso"
    android:orientation="horizontal"
    tools:context=".tutorial2">

    <HorizontalScrollView
        android:id="@+id/ScrollView_comojugar3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_comojugar31"
                android:layout_width="650dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/comojugar3a" />

            <ImageView
                android:id="@+id/imagen_comojugar32"
                android:layout_width="650dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/comojugar3b" />

            <ImageView
                android:id="@+id/imagen_comojugar33"
                android:layout_width="650dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/comojugar3c" />

            <ImageButton
                android:id="@+id/boton_comojugar3"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/flechasiguiente" />
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>